---
import { isEmpty } from "lodash-es";

const { data } = Astro.props;
---

<div class="seo-section">
  {!isEmpty(data.title) && <h1>{data.title}</h1>}
  <div class="seo-section__description">
    <div class="seo-section__img">
      {
        !isEmpty(data.image.imageUrl) && (
          <img src={data.image.imageUrl} alt={data.image.imageAlt} />
        )
      }
    </div>
    <div class="seo-section__text">
      {!isEmpty(data.description) && <p>{data.description}</p>}
    </div>
  </div>
</div>

<style lang="scss">
  .seo-section {
    width: 100%;
    padding: 2em 5em;

    @media (max-width: 576px) {
      padding: 0;
    }

    h1 {
      text-align: center;
      font-size: 3.5rem;
      text-transform: uppercase;
      font-style: italic;
      color: #fff000;
      margin-bottom: 1rem;
      @media (max-width: 576px) {
        font-size: 1.5rem;
      }
      @media (max-width: 1024px) {
        font-size: 3rem;
        text-align: center;
      }
    }

    &__description {
      width: 100%;
      padding: 0 10rem;
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 1em;
      @media (max-width: 720px) {
        padding: 0 1rem;
        grid-template-columns: 1fr;
      }
    }

    &__img {
      img {
        width: 100%;
        height: auto;
        border-radius: 1em;
        object-fit: cover;
      }
    }

    &__text {
      text-align: left;
      font-size: 1.2rem;
      @media (max-width: 720px) {
        text-align: center;
        font-size: 1.2rem;
      }
    }
  }
</style>
