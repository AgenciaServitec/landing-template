---
import { IconItem, Divider } from "../components";
import { LT_SETTINGS } from "../data-list";

const { FOOTER, PROJECT } = LT_SETTINGS;
---

<footer class="footer">
  <Divider />

  <img src={PROJECT.logo} alt="logo" />

  <span class="slogan-description">
    {PROJECT.slogan}
  </span>

  <section class="icons-list">
    {
      FOOTER.CONTACT_DATA?.items.map((item, index) => (
        <IconItem
          key={index}
          path={item.path}
          title={item.title}
          description={item.description}
        />
      ))
    }
  </section>

  <div class="footer__bottom">
    <p>
      Copyrights Â© 2023 Proyectores Servitec Todos los derechos reservados -
      Desarrollado por <a
        href="https://agenciaservitec.com"
        target="_blank"
        class="color__primary">Agencia Servitec</a
      >
    </p>
  </div>
</footer>

<style lang="scss">
  .footer {
    display: flex;
    align-items: center;
    flex-direction: column;
    margin-top: 2em;

    img {
      width: 17em;
      margin: 1.2em auto;
    }

    .slogan-description {
      text-align: center;
      color: #ffffff8c;
      padding: 1em;
    }

    .icons-list {
      padding: 2em 1.5em;
      gap: 1em;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(12em, auto));
      width: 100%;
    }

    &__bottom {
      background: #000;
      width: 100%;
      padding: 1em;

      p {
        text-align: center;
        font-size: 0.9em;

        a {
          text-decoration: none;
        }
      }
    }
  }

  @media (min-width: 500px) {
    footer {
      .slogan-description {
        max-width: 50%;
      }
    }
  }
</style>
