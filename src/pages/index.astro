---
import { BaseLayout } from "../layouts";
import { LT_SETTINGS } from "../data-list";
import {
  Services,
  SectionWrapper,
  AboutUsComponent,
  CarouselMain,
} from "../components";
import BrandsSection from "../components/home/BrandsSection.astro";

const { META, BODY } = LT_SETTINGS;
---

<BaseLayout>
  <main>
    <div class="banner-wrapper">
      {
        BODY.PRINCIPAL_SECTION?.banner && (
          <img
            src={BODY.PRINCIPAL_SECTION.banner.bannerImgUrl}
            alt={BODY.PRINCIPAL_SECTION.banner.bannerImgAlt}
          />
        )
      }{
        BODY.PRINCIPAL_SECTION?.carousel && (
          <CarouselMain slides={BODY.PRINCIPAL_SECTION?.carousel.images} />
        )
      }
    </div>

    <SectionWrapper>
      <AboutUsComponent
        title={BODY.ABOUT_US?.title}
        description={BODY.ABOUT_US?.description}
        imgUrl={BODY.ABOUT_US?.imgUrl}
        imgAlt={BODY.ABOUT_US?.imgAlt}
      />
    </SectionWrapper>

    <SectionWrapper>
      <Services
      title={BODY.SERVICES?.title}
      list={BODY.SERVICES?.list}
      imgUrl={BODY.SERVICES?.imgUrl}
      name={BODY.SERVICES?.name}
      />
    </SectionWrapper>

    <SectionWrapper>
      <BrandsSection />
    </SectionWrapper>
  </main>

  <style lang="scss">
    //MOBILE AND TABLET
    main {
      .banner-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        width: 100%;
        height: 100%;

        img {
          width: 100%;
          height: auto;
          z-index: 100;
        }

        .wrapper-content {
          width: 90%;
          margin: auto;
          color: #fff;
          text-transform: uppercase;
          display: flex;
          flex-direction: column;
          align-items: center;
          justify-content: center;
          z-index: 200;
          @media (min-width: 920px) {
            width: 60%;
          }

          .quote-wrapper {
            padding: 2em 0 0 0;

            a {
              text-decoration: auto;
            }
          }
        }
      }
    }

    //DESKTOP
    @media (min-width: 920px) {
      main {
        .banner-wrapper {
          img {
            width: 100%;
            height: 70vh;
          }
        }
      }
    }
  </style>
</BaseLayout>
